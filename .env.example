# Copy this file to .env.local and fill in the credentials for the services you want to use.

# --- Database Configuration ---
# Set to "supabase" or "postgres" to choose which database to use
DATABASE_TYPE=supabase

# PostgreSQL connection URL (only needed if DATABASE_TYPE=postgres)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/mydatabase

# --- LLM Cleanup ---
# Get a key from Google AI Studio: https://aistudio.google.com/
GEMINI_API_KEY=

# OpenAI and compatible services
OPENAI_API_KEY=

DEEPSEEK_API_KEY=
# The base URL for DeepSeek is usually https://api.deepseek.com/v1
DEEPSEEK_BASE_URL=

DOUBAO_API_KEY=
# The base URL for Doubao (Volcano Engine) is usually https://ark.cn-beijing.volces.com/api/v3
DOUBAO_BASE_URL=

# Aliyun Dashscope for Qwen
ALIYUN_DASHSCOPE_API_KEY=

# --- OCR Providers ---

# --- Google Cloud Vision ---
# Path to your Google Cloud service account JSON key file.
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/gcp-service-account.json

# --- Microsoft Azure Computer Vision ---
AZURE_COMPUTER_VISION_ENDPOINT=
AZURE_COMPUTER_VISION_KEY=

# --- Amazon Web Services (AWS) Textract ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# --- Aliyun (Alibaba Cloud) OCR ---
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=

# --- Baidu Cloud ---
BAIDU_API_KEY=
BAIDU_SECRET_KEY=

# --- Tencent Cloud ---
TENCENT_SECRET_ID=
TENCENT_SECRET_KEY=
TENCENT_REGION=


NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Email sending configuration
SMTP_HOST=your_smtp_host        # The hostname of your SMTP server (e.g., smtp.gmail.com).
SMTP_PORT=your_smtp_port        # The port of your SMTP server (e.g., 587 for TLS, 465 for SSL).
SMTP_SECURE=true                #  Set to true if your SMTP server uses SSL/TLS, otherwise false.
SMTP_USER=your_smtp_username    # The username for your SMTP server.
SMTP_PASS=your_smtp_password    # The password for your SMTP server.
EMAIL_FROM=you@your-domain.com  # The email address that the confirmation emails will be sent from.

# The base URL of your application. This is used to construct the confirmation link in the email
NEXT_PUBLIC_BASE_URL=http://localhost:3000 # For local development
# NEXT_PUBLIC_BASE_URL=https://www.kidstudy.site # For production


# random secret used to encrypt the session cookie, should be at least 32 characters long 
SECRET_COOKIE_PASSWORD=
